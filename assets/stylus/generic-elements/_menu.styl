// wrap contact
// ===============

.menu-contact--area
	bottom 53px
	height calc(100vh - 120px)
	left 0
	overflow hidden
	pointer-events none
	position absolute
	width 100%


.menu-contact--overlay
	background-color lcone
	bottom 0
	left 0
	position absolute
	transform translateY(100%)
	width 100%
	

	// interaction open menu
	// ============
		
	#menu-contact:checked ~ .menu-contact--area &
		pointer-events all
		transform translateY(0)




