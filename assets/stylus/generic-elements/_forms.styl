// form
// ===============

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}


+placeholder()
	color lightColorMaster
	font 300 14px fontMaster


input
	&[type="text"]
	&[type="email"]
	&[type="password"]
	&[type="file"]
		background-color white
		border 1px solid #e0e0e0
		color #969696
		font 700 15px fontMaster
		outline none
		padding 16px 27px
		width 100%






	&[type="submit"]
		appearance none
		background-color darkColorMaster
		border 1px solid darkColorMaster
		color white
		cursor pointer
		display block
		font 700 17px fontSecond
		letter-spacing 3px
		margin-left auto
		margin-right 0
		padding 10px 20px
		text-transform uppercase
		transition background-color .4s ease

		@media (min-width menuViewPort)
			padding 14px 30px


		&:hover
			background-color white
			color darkColorMaster







textarea
	background-color transparent
	border 1px solid #e0e0e0
	color #969696
	font 15px fontMaster
	height 150px
	margin-bottom 20px
	outline none
	padding 12px 27px
	transition .4s ease
	width 100%



