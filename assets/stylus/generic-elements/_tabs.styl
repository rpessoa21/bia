// ================
.tabs-open-list
.tabs-back-list
	margin-bottom 60px
	text-align center
	
	a
		border 1px darkColorMaster solid
		font-weight 700
		padding 18px 30px

	@media (min-width tablet)
		display none

.tabs-back-list
	margin-bottom 20px


.tabs-list
	// responsive mode
	// ==============
	@media (max-width tablet - 1)
		background-color white
		left 0
		overflow hidden
		position fixed
		top 0
		transform translateY(-100%)
		transition .4s ease
		width 100%
		z-index 10
		
		&.active
			transform translateY(90px)
	
		

	> ul
		display flex
		flex-direction column
		
		// responsive mode
		// ==============
		@media (max-width tablet - 1)
			overflow auto
			height calc(90vh - 90px)
			width calc(100% + 20px)
		
		@media (min-width 992px)
			flex-direction row
			
		.tabs--columns &
			flex-direction column
			
		> li
			+ li
				margin-left 0
				
				@media (max-width menuViewPort)
					margin-top 10px
				
			a
				border 1px lightColorMaster solid
				display block
				font-weight 700
				line-height 1.6
				padding 14px 30px
				position relative
				text-align center
				transition .4s ease
				
				

				&.active
				&:hover
					background-color lightColorMaster
					color white
					

.tab-content
	position relative
	
		
div[id^='tab-target-']
	display none

	





#tabs-select
	display none
	
	@media (max-width desktopSmall - 1)
		display block



.tabs-list
	@media (max-width desktopSmall - 1)
		display none
	