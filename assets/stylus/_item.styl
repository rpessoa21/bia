body
	background url(../img/top.jpg) no-repeat top center


section:not(:first-of-type)
	padding-bottom 180px
	position relative

	&:before
		background #989898
		content ''
		height 1px
		left 50%
		position absolute
		top 0
		transform translate(-50%, -100px)
		width 240px
	
img
	@media (max-width 640px)
		height auto
		max-width 100%


// padroes
// =======

.item-destaque
	font-size 24px
	
	p:first-of-type:first-letter
	.letter:first-letter
		font-size 40px
		line-height 1


.item-title
	margin-bottom 60px
	text-align center


.item-text
	font-size 22px
	
	p:first-of-type:first-letter
	.letter:first-letter
		font-size 36px
		line-height 1
		

	p + p
		margin-top 30px
		

.item-olho
	font-size 36px
	padding-top 60px
	position relative

	&:before
		background black
		content ''
		height 1px
		top 0
		position absolute
		width 180px
		
	
	+ p
		padding-top 60px


.item-olho--left
	float left
	margin 60px 30px
	max-width 46%


// img
// ======

.img-right
	background-color #ececec
	font-size 15px
	float right
	margin 16px 0 60px 60px
	position relative
	
	p
		line-height 0
	
	span
		background-color #ececec
		display inline-block
		line-height 1.3
		padding 7px 7px 10px
		position absolute
		width 100%


.img-left
	background-color #ececec
	font-size 15px
	float left
	margin 16px 60px 60px 0
	position relative
	
	p
		line-height 0
	
	span
		background-color #ececec
		display inline-block
		line-height 1.3
		padding 7px 7px 10px
		position absolute
		width 100%



// header
// ============

.header
	background white
	box-shadow 1px 1px 10px rgba(black, .1)
	position fixed
	width 100%
	z-index 2
	

.item-header
	align-items center
	display flex
	justify-content space-between
	padding 7px 16px
	

.item-logo
	font-size 24px
	


// main
// ==========

.main
	padding-top 60px
	



// section
// =============

.tpl-top
	.container
		max-width 1100px
		
	
	.item-content
		max-width 800px
		padding 20vh 0


.item-subject
	> *
		font-size 65px
		line-height 1.2
	

.item-autora
	font-size 36px